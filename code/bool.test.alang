/// Basic bool variable
function basic_bool_test(): int {
  bool a = true;
  if (a) {
    return 0;
  }

  return 1;
}

/// Basic bool or
function basic_or_test(): int {
  int a = 2;
  int b = 3;
  if (a == b || a == 2) {
    return 0;
  }

  return 1;
}

/// Basic bool and
function basic_and_test(): int {
  int a = 2;
  if (a < 10 && a > 1) {
    return 0;
  }

  return 1;
}

/// Test with nested expression
function basic_nest_test(): int {
  int a = 2;
  if (a < 10 && (a < 1 || a > 1) ) {
    return 0;
  }

  return 1;
}